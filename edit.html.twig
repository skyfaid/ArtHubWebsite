{% extends 'base.html.twig' %}

{% block title %}Edit Participation{% endblock %}

{% block stylesheets %}
    <style>
        .table {
            width: 100%;
            margin-top: 20px;
        }

        .table thead th {
            background-color: #343a40;
            color: white;
        }

        .table-hover tbody tr:hover {
            background-color: #f8f9fa;
        }

        .btn {
            padding: 0.375rem 0.75rem;
            border-radius: 0.25rem;
            transition: all 0.3s ease;
            color: #fff;
            border: none;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        .btn-primary {
            background-color: #007bff;
        }

        .btn-primary:hover {
            background-color: #0056b3;
            box-shadow: 0 8px 15px rgba(0, 123, 255, 0.5);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background-color: #6c757d;
        }

        .btn-secondary:hover {
            background-color: #545b62;
            box-shadow: 0 8px 15px rgba(108, 117, 125, 0.5);
            transform: translateY(-2px);
        }

        .btn-success {
            background-color: #28a745;
        }

        .btn-success:hover {
            background-color: #1e7e34;
            box-shadow: 0 8px 15px rgba(40, 167, 69, 0.5);
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Edit Participation</h1>

    {{ include('participation/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('app_participation_index') }}" class="btn btn-primary btn-sm">Back to List</a>

    {{ include('participation/_delete_form.html.twig') }}
</div>
{% endblock %}
