{% extends 'base.html.twig' %}
{% block title %}Signup - ArtHub{% endblock %}

{% block body %}
    <section style="padding-top: 50px; padding-bottom: 150px;">
        <img src="{{ asset('clientHome/images/signup/status.png') }}" style="bottom: 5px; position: absolute; left: 90px; -webkit-animation: ImgBounce 5s ease-in-out 0s infinite alternate; animation: ImgBounce 5s ease-in-out 0s infinite alternate;">
        <div class="container">
            <div class="row">
                <div class="col-xl-4">
                    <div class="donate-one__block">
                        <div class="block-title">
                            <p>Sign Up</p>
                            <h3>Join Us</h3>
                        </div>
                        <p>"Discover a vibrant art community at ArtHub â€“ where creativity knows no bounds! Join us today and embark on a journey through a kaleidoscope of artistic expressions. With a plethora of captivating artworks awaiting your exploration, you'll find inspiration in every corner. Register now and immerse yourself in a world where every stroke tells a story. Your artistic adventure starts here at ArtHub."</p>
                    </div>
                </div>
                <div class="col-xl-8">
                    {{ form_start(registrationForm, {'attr': {'id': 'registrationForm','novalidate': 'novalidate'}}) }}
                    <div class="donate-one__form">
                        <h3 class="donate-one__title">Welcome Mate</h3>
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="donate-one__input">
                                    {{ form_row(registrationForm.pseudo) }}
                                    <div class="text-danger">
                                        {{ form_errors(registrationForm.pseudo) }}
                                    </div>
                                </div>                            
                            </div>
                            <div class="col-lg-12">
                                <div class="donate-one__input">
                                    {{ form_row(registrationForm.motDePasseHash.first, {'label': 'Password'}) }}
                                    <div class="text-danger">
                                        {{ form_errors(registrationForm.motDePasseHash.first) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="donate-one__input">
                                    {{ form_row(registrationForm.motDePasseHash.second, {'label': 'Confirm Password'}) }}
                                    <div class="text-danger">
                                        {{ form_errors(registrationForm.motDePasseHash.second) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <h3 class="donate-one__title">Personal Info</h3>
                            </div>
                            <div class="col-lg-6">
                                <div class="donate-one__input">
                                    {{ form_row(registrationForm.prenom, {'label': 'First Name'}) }}
                                    <div class="text-danger">
                                        {{ form_errors(registrationForm.prenom) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div class="donate-one__input">
                                    {{ form_row(registrationForm.nom, {'label': 'Last Name'}) }}
                                    <div class="text-danger">
                                        {{ form_errors(registrationForm.nom) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="donate-one__input">
                                    {{ form_row(registrationForm.email) }}
                                    <div class="text-danger">
                                        {{ form_errors(registrationForm.email) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="donate-one__input">
                                    {{ form_row(registrationForm.gender) }}
                                    <div class="text-danger">
                                        {{ form_errors(registrationForm.gender) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12">
                                <div class="donate-one__input">
                                    <label>Phone Number</label>
                                    <div class="donate-one__input" style="display: flex; align-items: baseline;">
                                        {{ form_row(registrationForm.countryCode) }}
                                        {{ form_row(registrationForm.phoneNumber) }}
                                        
                                    </div>
                                    <div class="text-danger">
                                            {{ form_errors(registrationForm.phoneNumber) }}
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-12" style="margin-top: 10px;">
                                {{ form_row(registrationForm.register, {'label': 'Register Now', 'attr': {'class': 'thm-btn donate-one__btn'}}) }}
                            </div>
                        </div>
                    </div>
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </section>
    <section class="cta-one"></section>
{% endblock %}
