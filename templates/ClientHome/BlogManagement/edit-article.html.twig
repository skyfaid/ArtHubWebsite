{% extends 'base.html.twig' %}
{% block title %}Edit Article{% endblock %}

{% block body %}

    <div class="contact-one"> <!-- Add class "contact-one" -->
        <div class="container">
            <div class="block-title-two text-center">
                <p>Edit Article</p> <!-- Adjust the title if needed -->
            </div>

            <div class="row">
                <div class="col-lg-8">
                    {{ form_start(form, {'attr': {'class': 'contact-form-validated contact-one__form'}}) }}
                    <div class="row">
                        <div class="col-lg-6">
                            {{ form_row(form.titre) }}
                        </div>
                        <div class="col-lg-6">
                            {{ form_row(form.imagePath) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_row(form.contenu) }}
                        </div>
                        <div class="col-lg-12">
                            {{ form_row(form.update) }} <!-- Update button -->
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
