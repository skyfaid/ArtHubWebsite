{% extends 'baseAdmin.html.twig' %}

{% block title %}ArtHub - Events{% endblock %}

{% block page_name %}Events{% endblock %}

{% block body %} <!-- this is used to override the body in the base admin template -->
<div class="container-fluid py-4">
    <div class="row">
        <div class="col-12">
            <div class="card mb-4">
                <div class="card-header pb-0">
                    <h6>Events List</h6>
                </div>
                <div class="card-body px-0 pt-0 pb-2">
                    <div class="table-responsive p-0">
                        <table class="table align-items-center mb-0">
                            <thead> <!-- thead = table header -->
                                <tr> <!-- tr = table rows -->
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">ID</th> <!-- th represents a column header -->
                                    <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Name</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Start Date</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">End Date</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Location</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Type</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Description</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Places</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Participants</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">image url</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">video url</th>
                                    <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Exclusive</th>
                                    <th class="text-secondary opacity-7"></th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for evenement in evenements %}
                                <tr> <!-- tr = table rows -->      
                                    <td>{{ evenement.id }}</td>  <!-- td = table data -->
                                    <td>{{ evenement.nom }}</td>
                                    <td class="align-middle text-center">{{ evenement.datedebut ? evenement.datedebut|date('Y-m-d') : '' }}</td>
                                    <td class="align-middle text-center">{{ evenement.datefin ? evenement.datefin|date('Y-m-d') : '' }}</td>
                                    <td class="align-middle text-center">{{ evenement.lieu }}</td>
                                    <td class="align-middle text-center">{{ evenement.type }}</td>
                                    <td class="align-middle text-center">{{ evenement.description }}</td>
                                    <td class="align-middle text-center">{{ evenement.nombreplaces }}</td>
                                    <td class="align-middle text-center">{{ evenement.nombreparticipants }}</td>
                                    <td class="align-middle text-center">{{ evenement.posterurl }}</td>
                                    <td class="align-middle text-center">{{ evenement.videourl }}</td>
                                    <td class="align-middle text-center">{{ evenement.isExclusive }}</td>
                                    <td class="align-middle">
                                    
                                        <a href="{{ path('app_evenements_show', {'id': evenement.id}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="View event">
                                            View
                                        </a>
                                        <a href="{{ path('app_evenements_edit', {'id': evenement.id}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Edit event">
                                            Edit
                                        </a>
                                       <a href="javascript:void(0);" onclick="deleteEvent({{ evenement.id }}, '{{ csrf_token('delete' ~ evenement.id) }}')" 
                                       class="text-secondary font-weight-bold text-xs" 
                                       data-toggle="tooltip" 
                                       data-original-title="Delete event"
                                       data-csrf="{{ csrf_token('delete' ~ evenement.id) }}">Delete</a>
                                      <a href="{{ path('app_evenements_participants', {'id': evenement.id}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="View participants">
                                       Participants
                                      </a>
                                      <a href="{{ path('app_evenements_pdf', {'id': evenement.id}) }}" class="text-secondary font-weight-bold text-xs" data-toggle="tooltip" data-original-title="Download PDF">
                                       PDF
                                       </a>

                                    </td>
                                </tr>
                                {% else %}
                                <tr>
                                    <td colspan="10" class="text-center">No records found</td>
                                </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="{{ path('app_evenements_new') }}" class="btn btn-primary" style="margin-left: 30px;">Create new Event</a>

<script>
function deleteEvent(eventId, csrfToken) {
    // Prompt the user for confirmation
    if (confirm('Are you sure you want to delete this event?')) {
    const formData = new FormData();
    formData.append('_token', csrfToken);

    fetch('/evenements/' + eventId, {
        method: 'POST',
        headers: {
            'X-Requested-With': 'XMLHttpRequest',
        },
        body: formData
    }).then(response => {
        if (response.ok) {
            window.location.reload(); // Reload the page to reflect the deletion
        } else {
            alert('Something went wrong. Please try again.');
        }
    }).catch(error => {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
    });
}
}
</script>

{% endblock %}
