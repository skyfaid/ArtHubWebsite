{% extends 'base.html.twig' %}

{% block title %}Details - YourSite{% endblock %}

{% block body %}
      
{% include 'ClientHome/header.html.twig' with {'page_title': 'Detaille'} %}
        <section class="event-details">
            <div class="container">
                <div class="event-details__top">
                    <p>{{ oeuvre.dateCreation|date('l, M d, Y') }}</p>
                    <h3>{{ oeuvre.titre }}</h3>
                </div><!-- /.event-details__top -->
                <div class="row high-gutter">
                    <div class="col-lg-8">
                        <div class="event-details__main">
                            <div class="event-details__image">
                                <img src="{{ asset('uploads/' ~ oeuvre.posterUrl) }}" alt="{{ oeuvre.titre }}" id="oeuvre-image" style="width: 780px; height: 630px;">
                            </div><!-- /.event-details__image -->
                            <div class="event-details__content">
                                <p id="description">{{ oeuvre.description }}</p>
                              
                             
                             
                            </div><!-- /.event-details__content -->
                        </div><!-- /.event-details__main -->
                        <div class="event-details__post-nav">
                            <!-- /.event-details__post__next -->
                        </div><!-- /.event-details__post-nav -->
                    </div><!-- /.col-lg-8 -->
                    <div class="col-lg-4">
                        <div class="event-details__booking">
                            <ul class="event-details__booking-info list-unstyled">
                                <li id="type">
                                    <span>Type:</span>
                                    {{ oeuvre.type }}
                                </li>
                                <li id="DateCreation">
                                    <span>Date:</span>
                                    {{ oeuvre.datecreation|date('l, M d, Y') }}
                                </li>
                                <li id="disponibilite">
                                    <span>Disponibilit√©</span>
                                    {{ oeuvre.disponibilite }}
                                </li>
                                <li id="prix">
                                    <span>Prix:</span> ${{ oeuvre.prix }}
                                    <i class="fa fa-map-marker"></i> 
                                </li>
                              
                            </ul><!-- /.event-details__booking-info list-unstyled -->
                             <a href="{{ path('cart_add', {'id': oeuvre.id}) }}" class="thm-btn event-details__book-btn">Acheter</a>
                            <!-- /.thm-btn event-details__book-btn -->
                        </div><!-- /.event-details__booking -->
                    </div><!-- /.col-lg-4 -->
                </div><!-- /.row -->
            </div><!-- /.container -->
        </section><!-- /.event-details -->
        {% endblock %}