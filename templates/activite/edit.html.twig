{% extends 'base.html.twig' %}

{% block title %}Edit Activite{% endblock %}

{% block stylesheets %}
<style>
    .card {
        border: none;
        border-radius: 0.375rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .card-header {
        background-color: #5e72e4; /* Adjusted to match the dashboard theme */
        color: white;
        padding: 10px 20px;
    }
    .card-body {
        background-color: #fff;
        padding: 20px;
        border-radius: 0 0 0.375rem 0.375rem;
    }
    .btn-custom {
        background-color: #11cdef;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 0.375rem;
        cursor: pointer;
    }
    .btn-custom:hover {
        background-color: #0da5c0;
    }
    .delete-btn {
        background-color: #f5365c;
        margin-left: 10px;
    }
    .delete-btn:hover {
        background-color: #d1304d;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Edit Activite
        </div>
        <div class="card-body">
            {{ include('activite/_form.html.twig', {'button_label': 'Update'}) }}
            <div class="mt-3">
                <a href="{{ path('app_activite_index') }}" class="btn-custom">Back to list</a>
                </button>
            </div>
            {{ include('activite/_delete_form.html.twig') }}
        </div>
    </div>
</div>

<script>
    function confirmDelete() {
        if (confirm('Are you sure you want to delete this activite?')) {
            document.getElementById("delete_form").submit();
        }
    }
</script>
{% endblock %}
