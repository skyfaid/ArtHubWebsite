{% extends 'base.html.twig' %}

{% block title %}Activite Details{% endblock %}

{% block stylesheets %}
<style>
    .card {
        border: none;
        border-radius: 0.375rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
    }
    .card-header {
        background-color: #5e72e4; /* Matching the dashboard theme */
        color: white;
        padding: 10px 20px;
    }
    .card-body {
        background-color: #fff;
        padding: 20px;
        border-radius: 0 0 0.375rem 0.375rem;
    }
    .btn-custom {
        background-color: #11cdef;
        color: white;
        padding: 8px 16px;
        border: none;
        border-radius: 0.375rem;
        cursor: pointer;
    }
    .btn-custom:hover {
        background-color: #0da5c0;
    }
    .btn-secondary {
        background-color: #6c757d;
    }
    .btn-secondary:hover {
        background-color: #545b62;
    }
</style>
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="card">
        <div class="card-header">
            Activite Details
        </div>
        <div class="card-body">
            <table class="table">
                <tbody>
                    <tr>
                        <th>ID</th>
                        <td>{{ activite.idActivite }}</td>
                    </tr>
                    <tr>
                        <th>Name</th>
                        <td>{{ activite.nomAct }}</td>
                    </tr>
                    <tr>
                        <th>Start Date</th>
                        <td>{{ activite.datedebut ? activite.datedebut|date('Y-m-d') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>End Date</th>
                        <td>{{ activite.datefin ? activite.datefin|date('Y-m-d') : 'N/A' }}</td>
                    </tr>
                    <tr>
                        <th>Location</th>
                        <td>{{ activite.lieu }}</td>
                    </tr>
                    <tr>
                        <th>Number of Places</th>
                        <td>{{ activite.nbrePlaces }}</td>
                    </tr>
                    <tr>
                        <th>Type</th>
                        <td>{{ activite.typeAct }}</td>
                    </tr>
                    <tr>
                        <th>Poster URL</th>
                        <td>{{ activite.posterurl }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('app_activite_index') }}" class="btn-custom btn-secondary">Back to List</a>
                <a href="{{ path('app_activite_edit', {'idActivite': activite.idActivite}) }}" class="btn-custom">Edit</a>
                {{ include('activite/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
