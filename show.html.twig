{% extends 'base.html.twig' %}

{% block title %}Participation{% endblock %}

{% block stylesheets %}
    <style>
        /* Add your styles here */
        .table {
            width: 100%;
            margin-top: 20px;
        }

        .table thead th {
            background-color: #343a40;
            color: white;
        }

        /* Add more styles if needed */
    </style>
{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4 text-center">Participation Details</h1>

    <table class="table table-bordered">
        <tbody>
            <tr>
                <th scope="row">IdParticipation</th>
                <td>{{ participation.idParticipation }}</td>
            </tr>
            <tr>
                <th scope="row">IdActivite</th>
                <td>{{ participation.idActivite }}</td>
            </tr>
            <tr>
                <th scope="row">UtilisateurId</th>
                <td>{{ participation.utilisateurId }}</td>
            </tr>
            <tr>
                <th scope="row">Score</th>
                <td>{{ participation.score }}</td>
            </tr>
            <tr>
                <th scope="row">ParticipationDate</th>
                <td>{{ participation.participationDate ? participation.participationDate|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_participation_index') }}" class="btn btn-primary">Back to List</a>
    <a href="{{ path('app_participation_edit', {'idParticipation': participation.idParticipation}) }}" class="btn btn-secondary">Edit</a>

    {{ include('participation/_delete_form.html.twig') }}
</div>
{% endblock %}
